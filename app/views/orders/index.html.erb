
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Handle</th>
        <th scope="col">Handle</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each_with_index do |order, i| %>
        <tr>
          <th scope="row"> <%= i + 1 %> </th>
          <td><%= order.id %></td>
          <td><%= order.total %></td>
          <td><%= order.status %></td>
          <td><%= link_to "Ver mas", order_path(order) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
