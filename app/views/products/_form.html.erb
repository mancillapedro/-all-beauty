<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="col-md-4">

      <% if @product.new_record? %>
        <h2>Ingresar nuevo producto</h2>
      <% else %>
        <h2>Editar Producto</h2>
      <% end %>

      <%= simple_form_for @product do |f| %>
        <%= f.input :name, label: "Nombre" %>
        <%= f.input :description, label: "DescripciÃ³n" %>
        <%= f.input :stock, label:"Stock" %>
        <%= f.input :price, label:"Precio" %>
        <%= f.input :image, label:"Imagen del producto" ,as: :file, input_html: { accept: "image/*"} %>
        <%= f.association :category %>

        <div class="form-actions btn btn-outline-info btn-sm">
          <%= f.button :submit, "Ingresar producto" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

