<%= render "jumbotron"  %>

<div class="container">
  <div class="table-responsive">
    <table class="table table-hover">
      <h2>PRODUCTOS</h2>
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Img</th>
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Categoria</th>
          <th scope="col">Precio</th>
          <th scope="col">Stock</th>
          <th scope="col">Editar</th>
          <th scope="col">Borrar</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= render inline: product.valid_img(class: "avatar") %></td>
            <td><%= product.name %></td>
            <td class="text-break" ><%= product.description %></td>
            <td><%= product.category.name %></td>
            <td><%= product.price_format %></td>
            <td><%= product.stock %></td>
            <td><%= link_to "Editar", edit_product_path(product) %></td>
            <td><%= link_to "Borrar", product_path(product), method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end  %>
      </tbody>
    </table>

  </div>

  <div class="d-flex justify-content-around my-5">
    <%= link_to "back", dashboard_path, class:"btn btn-primary" %>
    <%= link_to "NUEVO PRODUCTO", new_product_path, class:"btn btn-primary" %>
  </div>

</div>





